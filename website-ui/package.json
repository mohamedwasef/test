{
  "name": "@platforms-code/design-system",
  "version": "1.0.0",
  "description": "Framework-agnostic design system with CSS tokens and component styles",
  "type": "module",
  "main": "src/index.css",
  "files": [
    "src/**/*",
    "docs/**/*",
    "README.md"
  ],
  "scripts": {
    "dev": "npx serve . -p 3000 --no-clipboard",
    "preview": "npx serve docs -p 3000 --no-clipboard",
    "lint:css": "echo 'CSS linting not configured - add stylelint if needed'",
    "format": "prettier --write \"src/**/*.{css,html}\" \"docs/**/*.{html,css}\""
  },
  "keywords": [
    "design-system",
    "css",
    "design-tokens",
    "components",
    "framework-agnostic",
    "bem",
    "rtl"
  ],
  "author": "Platforms Code",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.1.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false
  }
}
